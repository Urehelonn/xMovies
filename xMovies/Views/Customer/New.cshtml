@model xMovies.ViewModels.CreateCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @*expect display: Membership Choice*@
        @Html.LabelFor(c => c.Customer.MembershipType.MembershipName)
        @Html.DropDownListFor(c => c.Customer.MembershipType.MembershipName, new SelectList(Model.MembershipTypes, "Id", "MembershipName"),"-- Select Membership Type --", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.EmailSubscribed)   Subscribe to xMovie Weekly News
        </label>
    </div>

    <button type="submit" class="btn-primary">Save New Customer</button>
}